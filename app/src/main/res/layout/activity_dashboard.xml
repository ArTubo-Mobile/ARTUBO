<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/base_light_color"
    tools:context=".Dashboard">

    <ImageView
        android:id="@+id/sugar_cane_bg"
        android:layout_width="411dp"
        android:layout_height="357dp"
        android:alpha="0.3"
        android:scaleType="centerCrop"
        android:src="@drawable/sugarcanebackground"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-1dp" />

    <TextView
        android:id="@+id/textView_app_name"
        android:layout_width="283dp"
        android:layout_height="58dp"
        android:shadowColor="#00BCD4"
        android:text="CaneSense"
        android:textAlignment="center"
        android:textColor="@color/secondary_color"
        android:textSize="48sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="107dp" />

    <TextView
        android:id="@+id/textView_tagline"
        android:layout_width="307dp"
        android:layout_height="54dp"
        android:alpha="0.5"
        android:text="&quot;Grow Smarter, Save Sweeter â€” Precision Care for Every Cane.&quot;  "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="237dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="163dp"
        android:layout_height="221dp"
        android:src="@drawable/artuboicon1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="25dp" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/button_round_default"
        android:backgroundTint="@color/white"
        android:padding="5dp"
        android:text="SCAN"
        android:textAllCaps="false"
        android:textColor="@color/base_color"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="397dp" />

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/button_round_default"
        android:backgroundTint="@color/white"
        android:padding="5dp"
        android:text="EXIT"
        android:textAllCaps="false"
        android:textColor="@color/base_color"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="593dp" />

    <Button
        android:id="@+id/buttonAbout"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/button_round_default"
        android:backgroundTint="@color/white"
        android:padding="5dp"
        android:text="ABOUT"
        android:textAllCaps="false"
        android:textColor="@color/base_color"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="491dp" />

</androidx.constraintlayout.widget.ConstraintLayout>